{
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "quotes": ["error", "double"], // Always use double quotes
    "semi": ["error", "never"],    // Never use semicolons
    "object-curly-spacing": ["error", "always"], // Require spaces in object brackets
    "array-bracket-spacing": ["error", "always"], // Require spaces in array brackets
    "comma-dangle": ["error", "never"],
    "space-in-parens": ["error", "never"], // Require spaces in parentheses
    "indent": ["error", 2],
    "@typescript-eslint/explicit-function-return-type": "error",
    "@typescript-eslint/explicit-module-boundary-types": "error",
    "no-console": "warn"
  }
}
